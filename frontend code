    <!-- Footer -->
    <footer class="bg-slate-900 text-slate-300">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8">
                <div class="col-span-2 lg:col-span-1">
                    <h3 class="text-xl font-bold text-white">
                        Campus<span class="text-blue-500">Konnect</span>
                    </h3>
                    <p class="mt-2 text-sm text-slate-400">Connecting campus talent.</p>
                </div>
                <div>
                    <h4 class="font-semibold text-slate-200">Platform</h4>
                    <ul class="mt-4 space-y-2">
                        <li><a href="#" class="hover:text-white">Find a Skill</a></li>
                        <li><a href="#" class="hover:text-white">Offer a Skill</a></li>
                        <li><a href="#" id="footer-squad-up" class="hover:text-white">Squad Up</a></li>
                        <li><a href="#" id="footer-workshops" class="hover:text-white">Workshops</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold text-slate-200">Company</h4>
                    <ul class="mt-4 space-y-2">
                        <li><a href="#" class="hover:text-white">About Us</a></li>
                        <li><a href="#" class="hover:text-white">Contact</a></li>
                        <li><a href="#" class="hover:text-white">Partnerships</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold text-slate-200">Resources</h4>
                    <ul class="mt-4 space-y-2">
                        <li><a href="#" class="hover:text-white">FAQ</a></li>
                        <li><a href="#" class="hover:text-white">Trust & Safety</a></li>
                        <li><a href="#" class="hover:text-white">Community Guidelines</a></li>
                    </ul>
                </div>
